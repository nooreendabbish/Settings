use Cwd qw(abs_path);
use File::Basename;

main();

sub main {
    my $name = basename($0);

    if (@ARGV < 3 || 4 < @ARGV) {
        print STDERR <<EOF;
usage: $name local remote base merged
       $name local remote merged

This command depends on emacsc(1) and ediff-batch.el.  Put the
following lines in your Emacs initialization file.

    (require 'emacsc)
    (require 'ediff-batch)
EOF
        exit 64;
    }

    if (@ARGV == 4 && $ARGV[2] eq '') {
        splice(@ARGV, 2, 1);
    }

    my $format;
    if (@ARGV == 3) {
        $format = '(ediff-merge-files-in-batch-mode "%s" "%s" nil "%s")';
    } else {
        $format = '(ediff-merge-files-with-ancestor-in-batch-mode "%s" "%s" "%s" nil "%s")';
    }

    eval {
        my $merged = abs_path(pop @ARGV);
        my @files = map { check_file($_) } @ARGV;
        exec qw(emacsc -x),
            sprintf($format,
                    map { elisp_escape($_) } (@files, $merged));
    };
    if ($@) {
        print STDERR $name, ": ", $@;
        exit 1;
    }
}

sub check_file {
    my($file) = @_;

    -f $file and return abs_path($file);

    die sprintf("%s: %s\n", $file, $! || 'Not a regular file');
}

sub elisp_escape {
    (local $_) = @_;
    s/[\\"]/\\$1/;
    $_;
}
